
<%= javascript_include_tag 'jquery', 'application'%>


<h2 class = "offset2">Ingresar</h2>
</br>


<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <script>
 	$(document).ready(function() {
		$(".alert fade in alert-error").css(color: "blue");
	});
  </script> 
  
  <div class = "offset2"><%= f.label :email %> </div>
  <div class = "offset2"> <%= f.email_field :email, :autofocus => true , :placeholder => "Introduzca su correo electrónico"%>
	<span id="estimateerror" style="font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 12pt;color: #CC3300; position:relative;visibility:hidden;"> <strong>¡¡Error!!</strong>El e-mail indicado no está registrado</span>
	</div>


  <div class = "offset2"><%= f.label :contraseña %></div>
  <div class = "offset2"><%= f.password_field :password , :placeholder => "Contraseña" %></div>



  <% if devise_mapping.rememberable? -%>
  <div class = "offset2"><%= f.check_box :remember_me %> <%= f.label :Recuerdame %></div>
  <% end -%>
  <div class = "offset8"><%= f.submit "Aceptar" , :class => "btn btn-default"%>
    <%= link_to  "Cancelar", root_path, :class => "btn btn-default"%>

  </div>

<% end %>

