<h2 class="text-center">Problemas</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Texto</th>
      <th>Email</th>
      <th>Descripcion</th>
      <th>Telefono de contacto</th>
      <th>Area de conocimiento</th>
      <th>Usuario</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody >
    <% @problems.each do |problem| %>
      <tr>
        <td><%= problem.title %></td>
        <td><%= problem.contact %></td>
        <td><%= problem.description %></td>
        <td><%= problem.telephone %></td>
        <td><%= problem.areas_of_knowledge %></td>
        <td><%= problem.user.nickname %>
        <td class="btn btn-primary"><%= link_to 'Ver', problem %></td>
        <% if (problem.owner(current_user)) %>
          <td class="btn btn-info"><%= link_to 'Editar', solutions_path(problem) %></td>
         <td class="btn btn-warning"><%= link_to 'Eliminar', problem, method: :delete, data: { confirm: 'Â¿Estas seguro de eliminarlo?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

