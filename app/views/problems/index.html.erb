
<h4 align="center">Problemas</h4>
<div >
<div >
<table class="table table-striped">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Categoría</th>
      <th>Usuario</th>

    </tr>
  </thead>

  <tbody class="tablareducida" >
    <% @problems.each do |problem| %>
      <tr>

        <td><%= problem.title%></td>

        <td><%= problem.areas_of_knowledge.acronym[0..10] %></td>
        <td><%= problem.user.nickname[0..15] %></td>
        <td ><%= link_to 'Ver', problem, :class => 'btn btn-default colorBlanco' %>

        <% if (problem.owner(current_user)) %>
          <%= link_to 'Editar', problem_path(problem), :class => 'btn btn-warning' %>
         <%= link_to 'Eliminar', problem, method: :delete, :class=>'btn btn-danger' ,data: { confirm: '¿Estas seguro de eliminarlo?' } %></td>

        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
      <%= will_paginate @problems, :class=> "flickr_pagination"%>
</div>
</div>
