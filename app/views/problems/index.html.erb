<h1>Problemas</h1>

<table>
  <thead>
    <tr>
      <th>Texto</th>
      <th>Email</th>
      <th>Descripcion</th>
      <th>Telefono de contacto</th>
      <th>Area de conocimiento</th>
      <th>Usuario</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @problems.each do |problem| %>
      <tr>
        <td><%= problem.title %></td>
        <td><%= problem.contact %></td>
        <td><%= problem.description %></td>
        <td><%= problem.telephone %></td>
        <td><%= problem.areas_of_knowledge %></td>
        <td><%= problem.user.nickname %>
        <td><%= link_to 'Ver', problem %></td>
        <% if (problem.owner(current_user)) %>
          <td><%= link_to 'Editar', edit_problem_path(problem) %></td>
         <td><%= link_to 'Eliminar', problem, method: :delete, data: { confirm: 'Â¿Estas seguro de eliminarlo?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

