<h1>Problemas</h1>

<%= form_tag problems_path, :method => 'get', :id => "problems_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Buscar", :name => nil %>
  </p>
  <div id="problems"><%= render 'problems' %></div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Email</th>
      <th>Descripcion</th>
      <th>Telefono de contacto</th>
      <th>Area de conocimiento</th>
      <th>Usuario</th>
      <td>Fecha</td>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @problems.each do |problem| %>
      <tr>
        <td><%= problem.title %></td>
        <td><%= problem.contact %></td>
        <td><%= problem.description %></td>
        <td><%= problem.telephone %></td>
        <td><%= problem.areas_of_knowledge.name %></td>
        <td><%= problem.user.nickname %></td>
        <td><%= problem.created_at%></td>
        <td><%= link_to 'Ver', problem %></td>
        <% if (problem.owner(current_user)) %>
          <td><%= link_to 'Editar', edit_problem_path(problem) %></td>
         <td><%= link_to 'Eliminar', problem, method: :delete, data: { confirm: 'Â¿Estas seguro de eliminarlo?' } %></td>
	 <td><%= link_to 'Elimina con Ajax', problem, method: :delete, data: {alert:
'Se elimino el problema'}%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
