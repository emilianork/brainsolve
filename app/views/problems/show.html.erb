
  <h2><%= @problem.title %></h2>

<div class="row">
  <div class="span6 offset4">
<%if @problem.owner(current_user) %>
<%= link_to 'Editar', edit_problem_path(@problem),:class => 'btn  btn btn-primary' %>
<%= link_to 'Eliminar', @problem, method: :delete, data: { confirm: '¿Estas seguro de eliminarlo?' }, :class =>'btn btn-danger' %>
<%end%>
<%if current_role == "creative" %>
<%= link_to 'Crear aporte', new_solution_path(@problem) , :class => 'btn  btn btn-info'%>
<%end%>
<%if request.env["HTTP_REFERER"].nil? %>
    <%= link_to 'Regresar', root_path , :class => 'btn btn-default' %>
  <%else%>
    <%= link_to 'Regresar', :back , :class => 'btn btn-default' %>
<%end%>
</div>
</div>
</br>

  <div class="row">
    <div class="span2 offset0">
      <strong>Apodo:</strong>
      <div class="fondoDatos" style="width: 240px"><%= @problem.user.nickname %></div>
  </div>
  
  <div class="span2 offset1">
    <strong>Email de contacto:</strong>
    <div class="fondoDatos" style="width: 296px"><%= @problem.contact%></div> 
  </div>
</div>
<%if !@problem.telephone.nil? %>
<div class="row">
  <div class="span3 offset0">
    <strong>Telefono de contacto:</strong>
    <div class="fondoDatos" style="width: 200px"><%= @problem.telephone %></div>
  </div>
</div>
<%end%>
<div class="row">

  <div class="span7 offset0">

  <strong>Descripcion:</strong>
  <pre class="fondoDatos" style="width: 600px; padding: 4px 4px;"><%= @problem.description %></pre>
</div>
</div>

<div class="row">
  <div class="span3 offset3">
  <strong>Categoría:</strong>
  <div class="fondoDatos" style="width: 296px"><%= @problem.areas_of_knowledge.name %></div>
</div>
</div>
  

<table class="table table-striped" style="width: 600px" >
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Correo</th>


    </tr>
  </thead>

  <tbody class="tablareducida" style="width: 600px" >
    <% @solutions.each do |solution| %>
      <tr>
        <td class="descripcion"><%= solution.user.nickname[0..15] %></td>
        
        <td><%= solution.email[0..14]%></td>


        
        <td><%= link_to 'Ver', solution , :class => 'btn btn-default'%></td>
	       <%if solution.owner(current_user) %>
        	 <td><%= link_to 'Editar', edit_solution_path(solution), :class => 'btn btn-warning' %></td>
          <td><%= link_to 'Eliminar', solution, method: :delete, data: { confirm: '¿Estas seguro de eliminarlo?' } , :class => 'btn btn-danger'%></td>
	       <%else%>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
	       <%end%>
      </tr>
    <% end %>
  </tbody>
</table>
</br>
</br>
<div class="row">
  <div class="span6 offset4">
<%if current_role == "creative" %>
<%= link_to 'Crear aporte', new_solution_path(@problem) , :class => 'btn  btn btn-info'%>
<%end%>

<%if request.env["HTTP_REFERER"].nil? %>
    <%= link_to 'Regresar', root_path , :class => 'btn btn-default' %>
  <%else%>
    <%= link_to 'Regresar', :back , :class => 'btn btn-default' %>
<%end%>
</div>
</div>
