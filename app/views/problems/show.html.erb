<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @problem.title %>
</p>

<p>
  <strong>Contact:</strong>
  <%= @problem.contact %>
</p>

<p>
  <strong>Description:</strong>
  <%= @problem.description %>
</p>

<p>
  <strong>Telephone:</strong>
  <%= @problem.telephone %>
</p>

<p>
  <strong>Areas of knowledge:</strong>
  <%= @problem.areas_of_knowledge %>
</p>

<p>
  <strong>User:</strong>
  <%= @problem.user_id %>
</p>

<table>
  <thead>
    <tr>
      <th>Text</th>
      <th>Estimate</th>
      <th>Currency</th>
      <th>Email</th>
      <th>Telephone</th>
      <th>Company</th>
      <th>Company telephone</th>
      <th>Problem</th>
      <th>User</th>
    </tr>
  </thead>

  <tbody>
    <% @solutions.each do |solution| %>
      <tr>
        <td><%= solution.text %></td>
        <td><%= solution.estimate %></td>
        <td><%= solution.currency %></td>
        <td><%= solution.email %></td>
        <td><%= solution.telephone %></td>
        <td><%= solution.company %></td>
        <td><%= solution.company_telephone %></td>
        <td><%= solution.problem_id %></td>
        <td><%= solution.user_id %></td>
        <td><%= link_to 'Show', solution %></td>
	<%if solution.owner(current_user) %>
        	<td><%= link_to 'Edit', edit_solution_path(solution) %></td>
	<%end%>
        <%if solution.owner(current_user) %>
		<td><%= link_to 'Destroy', solution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<%if @problem.owner(current_user) %>
<%= link_to 'Destroy', @problem, method: :delete, data: { confirm: 'Are you sure?' } %>
<%end%>
<%if current_role == "creative" %>
<%= link_to 'New Solution', new_solution_path(@problem) %>
<%end%>
<%if @problem.owner(current_user)%>
<%= link_to 'Edit', edit_problem_path(@problem) %> |
<%end%>
<%= link_to 'Back', problems_path %>
